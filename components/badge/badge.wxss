/* color start*/

.tui-primary {
  background: #5677fc !important;
  color: #fff;
}
.tui-danger {
  background: #ed3f14 !important;
  color: #fff;
}

.tui-warning {
  background: #ff7900 !important;
  color: #fff;
}

.tui-green {
  background: #19be6b !important;
  color: #fff;
}

.tui-white {
  background: #fff !important;
  color: #333 !important;
}
.tui-black {
  background: #000 !important;
  color: #fff !important;
}

.tui-gray {
  background: #ededed !important;
  color: #999 !important;
}

/* color end*/

/* badge start*/

.tui-badge-dot {
  height: 16rpx;
  width: 16rpx;
  border-radius: 8rpx;
  /* display: inline-block;
  vertical-align: middle; */
  background: #5677fc;
  line-height: 1;
}

.tui-badge {
  font-size: 12px;
  line-height: 1;
  /* display: inline-block;
  vertical-align: middle; */
  padding: 3px 6px;
  border-radius: 50px;
  background: #5677fc;
  color: #fff;
}

.tui-badge-small {
  transform: scale(0.8);
  transform-origin: center center;
}

/* badge end*/