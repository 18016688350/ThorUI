<view class="container">
  <view class="circle" wx:for="{{circleList}}" style="top:{{item.topCircle}}rpx;left:{{item.leftCircle}}rpx;background-color: {{(index%2==0)?colorCircleFirst:colorCircleSecond}};"></view>
  <view class="container-in">
    <view class="content-out {{index==indexSelect?'awardSelect':''}}" wx:for="{{awardList}}" style="top:{{item.topAward}}rpx;left:{{item.leftAward}}rpx;">
      <image class="award-image" src="../../static/images/luck/{{item.imageAward}}"></image>
    </view>
    <view class="btn-start {{isRunning?'ative':''}}" bindtap="startGame" >立即抽奖</view>
  </view>
</view>